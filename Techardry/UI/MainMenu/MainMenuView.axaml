<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mainMenu="clr-namespace:Techardry.UI.MainMenu"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Techardry.UI.MainMenu.MainMenuView"
             x:DataType="mainMenu:MainMenuViewModel"
             Background="Transparent">
    
    <Design.DesignStyle>
        <Style Selector="mainMenu|MainMenuView">
            <Setter Property="Background" Value="Black" />
        </Style>
    </Design.DesignStyle>
    
    <Design.DataContext>
        <mainMenu:MainMenuViewModel />
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*,Auto">

        <Button HorizontalAlignment="Center"
            Grid.Row="0" Content="New Game" Command="{Binding NewGameCommand}" />
        <Button Grid.Row="1" Content="Options" 
                Command="{Binding OptionsCommand}"
                CommandParameter="{Binding $self}"/>
                
        <Button Grid.Row="2" Content="Exit" Command="{Binding ExitCommand}" />
        
    </Grid>
    
    
</UserControl>
