<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>default</LangVersion>
        <InterceptorsPreviewNamespaces>$(InterceptorsPreviewNamespaces);Techardry.Generated.LogInterceptors</InterceptorsPreviewNamespaces>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <WarningsAsErrors>;NU1605;Nullable</WarningsAsErrors>
        <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <WarningsAsErrors>;NU1605;Nullable</WarningsAsErrors>
        <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Resources\**" Pack="true">
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="MintyCore">
          <AutoGenerated>true</AutoGenerated>
          <Version>0.7.1</Version>
        </PackageReference>
        <PackageReference Include="MintyCore.Generator">
            <Version>0.6.0</Version>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="RectpackSharp">
            <Version>1.2.0</Version>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Render\shaders\" />
        <Folder Include="Resources\shaders\ui\" />
        <Folder Include="Resources\shaders\voxels\" />
    </ItemGroup>

    <ItemGroup>
        <AdditionalFiles Include="Common.registry.json" />
    </ItemGroup>

    <ProjectExtensions>
        <MintyCoreMod>
            <Name>Techardry</Name>
            <Id>techardry</Id>
            <Version>1.0.0</Version>
            <Description>Just Techardry</Description>
            <Authors>Alendon;Erikiller</Authors>
            <IsRootMod>true</IsRootMod>

            <Dependency Id="minty_core" PackageName="MintyCore" Version="0.7.1" />
        </MintyCoreMod>
    </ProjectExtensions>

</Project>
