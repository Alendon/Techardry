<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <WarningsAsErrors>;NU1605;Nullable</WarningsAsErrors>
      <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <WarningsAsErrors>;NU1605;Nullable</WarningsAsErrors>
      <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Resources\**" Pack="true">
            <PackageCopyToOutput>true</PackageCopyToOutput>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="DotNext">
        <Version>4.12.3</Version>
      </PackageReference>
      <PackageReference Include="DotNext.Threading">
        <Version>4.12.3</Version>
      </PackageReference>
      <PackageReference Include="FontStashSharp">
        <Version>1.2.8</Version>
      </PackageReference>
      <PackageReference Include="MintyCore">
        <AutoGenerated>true</AutoGenerated>
        <Version>0.5.0.1-alpha</Version>
      </PackageReference>
      <PackageReference Include="MintyCore.Generator">
        <Version>0.5.0-alpha2</Version>
      </PackageReference>
      <PackageReference Include="RectpackSharp">
        <Version>1.0.2</Version>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Resources\shaders\ui\" />
      <Folder Include="Resources\shaders\voxels\" />
    </ItemGroup>

    <ItemGroup>
      <AdditionalFiles Include="Common.registry.json" />
    </ItemGroup>
    
    <ProjectExtensions>
        <MintyCoreMod>
            <Name>Techardry</Name>
            <Id>techardry</Id>
            <Version>1.0.0</Version>
            <Description>Just Techardry</Description>
            <Authors>Alendon;Erikiller</Authors>
            <IsRootMod>true</IsRootMod>
            
            <Dependency Id="minty_core" PackageName="MintyCore" Version="0.5.0.1-alpha" />
            
        </MintyCoreMod>
    </ProjectExtensions>

</Project>
